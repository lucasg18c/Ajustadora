<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/txtPuntoX"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:layout_weight="1"
        android:autofillHints=""
        android:background="@drawable/edit_text_round"
        android:hint="X"
        android:gravity="center"
        android:maxLength="20"
        android:inputType="numberDecimal|numberSigned"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtPuntoY"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtPuntoY"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:layout_weight="1"
        android:autofillHints=""
        android:background="@drawable/edit_text_round"
        android:maxLength="20"
        android:hint="Y"
        android:gravity="center"
        android:inputType="numberDecimal|numberSigned"
        app:layout_constraintBottom_toBottomOf="@+id/txtPuntoX"
        app:layout_constraintEnd_toStartOf="@+id/btnBorrarPunto"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtPuntoX"
        app:layout_constraintTop_toTopOf="@+id/txtPuntoX" />

    <ImageView
        android:id="@+id/btnBorrarPunto"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="16dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/txtPuntoY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtPuntoY"
        app:layout_constraintTop_toTopOf="@+id/txtPuntoY"
        app:srcCompat="@drawable/ic_clear"
        android:contentDescription="@string/imagen_error"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>